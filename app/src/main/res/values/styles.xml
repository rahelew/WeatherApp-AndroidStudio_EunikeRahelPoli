<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#122259</item>
        <item name="colorPrimaryDark">#122259</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="weather_app">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#2F6476</item>
        <item name="android:fontFamily">@font/bungee</item>
        <item name="android:lineSpacingExtra">23sp</item>
    </style>

    <style name="author">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#2F6476</item>
        <item name="android:fontFamily">@font/bungee</item>
        <item name="android:lineSpacingExtra">14sp</item>
    </style>

    <style name="manado">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingExtra">14sp</item>
    </style>

    <style name="time">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>


</resources>

